<Window x:Class="Library.LibraryMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главная библиотека" Height="600" Width="800"
        WindowStartupLocation="CenterScreen" Background="#800000">

    <Grid Margin="10">
        <Border CornerRadius="10" Background="White" Padding="10">
            <TabControl FontFamily="{StaticResource MontserratFontFamily}" FontSize="16" Foreground="Black" SelectionChanged="TabControl_SelectionChanged">
                <TabItem Header="Просмотр книг">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <WrapPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Top">
                            <TextBlock Text="Фильтр по автору:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Black" />
                            <ComboBox x:Name="AuthorFilterComboBox" Width="150" Margin="0,0,10,0" />

                            <TextBlock Text="Фильтр по жанру:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Black" />
                            <ComboBox x:Name="GenreFilterComboBox" Width="150" Margin="0,0,10,0" />

                            <TextBlock Text="Поиск по названию:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Black" />
                            <TextBox x:Name="TitleSearchTextBox" Height="25" Width="200" Margin="0,0,10,0" />

                            <Button Content="Применить" Click="ApplyFiltersButton_Click" Width="130" />
                        </WrapPanel>

                        <DataGrid x:Name="BooksDataGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False"
                                  IsReadOnly="True" Margin="0,10,0,0" FontFamily="{StaticResource MontserratFontFamily}" FontSize="14" 
                                  GridLinesVisibility="Horizontal" RowBackground="#F9F9F9" AlternatingRowBackground="#EFEFEF" Foreground="Black">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="2*" />
                                <DataGridTextColumn Header="Год" Binding="{Binding Year}" Width="*" />
                                <DataGridTextColumn Header="Авторы" Binding="{Binding Authors}" Width="2*" />
                                <DataGridTextColumn Header="Жанры" Binding="{Binding Genres}" Width="2*" />
                                <DataGridTextColumn Header="Фотография" Binding="{Binding Image}" Width="2*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <TabItem Header="Профиль пользователя">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Профиль пользователя" 
                        Style="{StaticResource AccentTextBlockStyle}" 
                        HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                        Margin="0,0,0,20" />

                        <Ellipse Width="120" Height="120" Stroke="Gray" StrokeThickness="1" 
                        Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <Ellipse.Fill>
                                <ImageBrush x:Name="UserProfilePhoto" Stretch="Uniform" />
                            </Ellipse.Fill>
                        </Ellipse>

                        <TextBlock Text="Имя:" Grid.Row="2" Grid.Column="0" Style="{StaticResource DefaultTextBlockStyle}" VerticalAlignment="Center" />
                        <TextBlock x:Name="UserNameTextBlock" Grid.Row="2" Grid.Column="1" Style="{StaticResource DefaultTextBlockStyle}" VerticalAlignment="Center" Margin="10,0,0,0" />

                        <TextBlock Text="Логин:" Grid.Row="3" Grid.Column="0" Style="{StaticResource DefaultTextBlockStyle}" VerticalAlignment="Center" />
                        <TextBlock x:Name="UserLoginTextBlock" Grid.Row="3" Grid.Column="1" Style="{StaticResource DefaultTextBlockStyle}" VerticalAlignment="Center" Margin="10,0,0,0" />

                        <TextBlock Text="Email:" Grid.Row="4" Grid.Column="0" Style="{StaticResource DefaultTextBlockStyle}" VerticalAlignment="Center" />
                        <TextBlock x:Name="UserEmailTextBlock" Grid.Row="4" Grid.Column="1" Style="{StaticResource DefaultTextBlockStyle}" VerticalAlignment="Center" Margin="10,0,0,0" />

                        <TextBlock Text="Дата регистрации:" Grid.Row="5" Grid.Column="0" Style="{StaticResource DefaultTextBlockStyle}" VerticalAlignment="Center" />
                        <TextBlock x:Name="UserDateCreateTextBlock" Grid.Row="5" Grid.Column="1" Style="{StaticResource DefaultTextBlockStyle}" VerticalAlignment="Center" Margin="10,0,0,0" />

                        <Button Content="Редактировать профиль" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                        Width="240" Height="40" HorizontalAlignment="Center" Margin="0,20,0,0"
                        Click="EditProfileButton_Click" />
                    </Grid>
                </TabItem>

                <TabItem Header="Выйти">
                    <Grid>
                        <Button Content="Выйти из системы" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                Width="200" Height="50" Click="LogoutButton_Click" />
                    </Grid>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</Window>