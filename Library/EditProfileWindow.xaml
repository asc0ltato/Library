<Window x:Class="Library.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать профиль" Height="600" Width="400"
        WindowStartupLocation="CenterScreen" Background="#800000">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Редактирование профиля" 
                       Style="{StaticResource AccentTextBlockStyle}" 
                       HorizontalAlignment="Center" Margin="0,0,0,20" />

            <TextBlock Text="Имя:" Style="{StaticResource WhiteTextBlockStyle}" />
            <TextBox x:Name="UserNameTextBox" Width="250" />

            <TextBlock Text="Логин:" Style="{StaticResource WhiteTextBlockStyle}" />
            <TextBox x:Name="UserLoginTextBox" Width="250" />

            <TextBlock Text="Email:" Style="{StaticResource WhiteTextBlockStyle}" />
            <TextBox x:Name="UserEmailTextBox" Width="250" />

            <TextBlock Text="Пароль:" Style="{StaticResource WhiteTextBlockStyle}" />
            <PasswordBox x:Name="UserPasswordBox" Width="250" />

            <TextBlock Text="Фото профиля:" Style="{StaticResource WhiteTextBlockStyle}" />
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Ellipse Width="80" Height="80" Stroke="Gray" StrokeThickness="1" Margin="0,0,10,0">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="UserPhotoPreview" Stretch="Uniform" />
                    </Ellipse.Fill>
                </Ellipse>
                <Button Content="Выбрать фото" Click="SelectPhotoButton_Click" VerticalAlignment="Center" />
            </StackPanel>

            <Button Content="Сохранить" Click="SaveProfileButton_Click" Width="250" />
        </StackPanel>
    </Grid>
</Window>
