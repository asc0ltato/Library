<Window x:Class="Library.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" Background="#800000">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Авторизация" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Style="{StaticResource AccentTextBlockStyle}"/>

            <TextBlock Text="Логин или Email:" Margin="20,0,0,0" Style="{StaticResource WhiteTextBlockStyle}"/>
            <TextBox x:Name="LoginOrEmailTextBox" Width="270" />

            <TextBlock Text="Пароль:" Margin="20,0,0,0" Style="{StaticResource WhiteTextBlockStyle}"/>
            <PasswordBox x:Name="PasswordTextBox" Width="270" />

            <Button Content="Авторизоваться" Width="270" Click="LoginButton_Click"/>

            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,20,10,0" Style="{StaticResource WhiteTextBlockStyle}">
                Нет аккаунта? <Hyperlink Click="RegisterLink_Click">Зарегистрироваться</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
